<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <div class="row">

            <!-- List files and folders -->
            <div class="col">
                <form action="/listElements" method="post">
                    <%= errorMessage %>
                    <div class="mb-3">
                        <label for="areaToList" class="form-label">Emplacement</label>
                        <input type="text" class="form-control" id="areaToList" name="areaToList">
                    </div>
                    <!-- <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="radioRecursive" name="listRecursive">
                        <label class="form-check-label" for="radioRecursive">Recursive ou non ?</label>
                    </div> -->
                    <button type="submit" class="btn btn-primary">Afficher liste des fichiers</button>
                </form>
                <div>
                    <ul class="list-group list-group-flush">
                        <% for( elements of listElements){ %>
                            <li class="list-group-item"><%= elements %></li>
                        <% } %>
                    </ul>
                </div>
            </div>
            <!----------------------->

            <!-- Create new file -->
            <div class="col">
                <form action="/newFile" method="post">
                    <div class="mb-3">
                      <label for="newFile" class="form-label">New File</label>
                      <input type="text" class="form-control" id="newFile" name="newFile" required>
                    </div>
                    <div class="mb-3">
                        <label for="fileContent" class="form-label">Set the file content</label>
                        <textarea class="form-control" id="fileContent" rows="3" name="fileContent"></textarea>
                      </div>
                    <button type="submit" class="btn btn-primary">Add new file</button>
                  </form>
            </div>
            <!----------------------->

            <!-- Create new folder -->
            <div class="col">
                <form action="/newFolder" method="post">
                    <div class="mb-3">
                      <label for="newFolder" class="form-label">New Folder</label>
                      <input type="text" class="form-control" id="newFolder" name="newFolder" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add new folder</button>
                  </form>
            </div>
            <!----------------------->
        </div>


        <div class="row">
            <!-- Delete folder -->
            <div class="col">
                    <form action="/deleteFolder" method="post">
                        <div class="mb-3">
                          <label for="deleteFolder" class="form-label">Delete Folder</label>
                          <input type="text" class="form-control" id="deleteFolder" name="deleteFolder" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Delete Folder</button>
                      </form>
            </div>
            <!-- Delete File -->
            <div class="col">
                <form action="/deleteFile" method="post">
                    <div class="mb-3">
                      <label for="deleteFile" class="form-label">Delete File</label>
                      <input type="text" class="form-control" id="deleteFile" name="deleteFile" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Delete File</button>
                  </form>
            </div>

            <!-- Move or rename file / folder -->
            <div class="col">
                <form action="/changeEntity" method="post">
                    <div class="mb-3">
                      <label for="oldEntityName" class="form-label">Old Name / Emplacement</label>
                      <input type="text" class="form-control" id="oldEntityName" name="oldEntityName" required>
                    </div>
                    <div class="mb-3">
                        <label for="newEntityName" class="form-label">New Name / Emplacement</label>
                        <input type="text" class="form-control" id="newEntityName" name="newEntityName" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Change</button>
                  </form>
            </div>
        </div>

        <div class="row">
            <!-- Use command -->
            <div class="col">
                <form action="/useCommand" method="post">
                    <div class="mb-3">
                      <label for="commandName" class="form-label">Command to execute</label>
                      <input type="text" class="form-control" id="commandName" name="commandName" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Execute</button>
                  </form>
            </div>
            <div>
                <% if(commandReturn){ %>
                    <p><%= commandReturn %></p>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>